{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "lib": [
      "es2015"
    ],
    "outDir": "lib",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "*.scss"
  ]
}